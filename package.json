{
  "name": "new-infra-test",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.3.3",
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml up --build",
    "preview": "docker compose up --build",
    "lint": "bun --filter client lint",
    "clean": "docker compose down -v --rmi all --remove-orphans",
    "dockploy": "sh -c 'source .env && open ${DOCKPLOY_DASHBOARD_URL}'",
    "dockploy:docs": "open https://docs.dokploy.com/docs/core",
    "dns": "sh -c 'source .env && open ${DNS_SETTINGS_URL}'",
    "vps": "sh -c 'source .env && open ${VPS_DASHBOARD_URL}'"
  }
}

